Target = GESTOS
Target2 = LEAP
Source = gestos.cpp ./Include/Leap.h ./Include/libLeap.so
Source2 = LeapService.cpp ./Include/Leap.h ./Include/libLeap.so
CC= g++ -std=c++0x 
WFlags = -Wall -g
CFlags = -o

all: $(Target) $(Target2)

$(Target): $(Source)
	$(CC) $(WFlags) $(CFlags) $(Target) $(Source)
	
$(Target2): $(Source2)
	$(CC) $(WFlags) $(CFlags) $(Target2) $(Source2)
		
run:
	./$(Target2)
clean:
	rm -rf $(Target) $(Target2)
	
